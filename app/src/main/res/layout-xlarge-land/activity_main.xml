<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.obinna.redeemfinance.MainActivity"
    android:background="@mipmap/menu_bg">

    <android.support.design.widget.FloatingActionButton
        android:text="LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLogOut"
        android:onClick="onLogOutClick"
        android:layout_gravity="top|end"
        app:backgroundTint="@color/white"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        app:rippleColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="CALCULATOR"
        android:layout_width="100sp"
        android:layout_height="45sp"
        android:id="@+id/monthB"
        android:onClick="onmonthBClick"
        android:background="@android:color/background_light"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:text="RECORDS"
        android:layout_width="100sp"
        android:layout_height="45sp"
        android:id="@+id/recordB"
        android:onClick="onrecordBClick"
        android:background="@android:color/background_light"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/monthB"
        android:layout_alignBottom="@+id/monthB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="CREDIT"
        android:id="@+id/creditB"
        android:onClick="oncreditBClick"
        android:background="@android:color/background_light"
        android:textColor="@color/colorPrimary"
        style="@android:style/Widget.Button"
        android:layout_width="100sp"
        android:layout_height="45sp"
        android:layout_above="@+id/recordB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <Button
        android:text="DEBIT"
        android:layout_height="45sp"
        android:id="@+id/debitB"
        android:onClick="ondebitBClick"
        android:background="@android:color/background_light"
        android:textColor="@color/colorPrimary"
        android:layout_width="100sp"
        android:layout_alignBaseline="@+id/creditB"
        android:layout_alignBottom="@+id/creditB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
