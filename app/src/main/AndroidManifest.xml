<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.obinna.redeemfinance">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rccg_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyMenu"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="com.obinna.redeemfinance.CLEARSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu_display" />
        <activity
            android:name=".Profit_Menu"
            android:theme="@style/ProfitTheme" />
        <activity android:name=".MyCalc">
            <intent-filter>
                <action android:name="com.obinna.redeemfinance.CALCULATE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Debit_Menu"
            android:theme="@style/ProfitTheme" />
        <activity
            android:name=".Month_Record"
            android:theme="@style/MonthTheme" />
        <activity
            android:name=".TabView"
            android:label="@string/title_activity_tab_view"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Record_Menu"
            android:label="@string/title_activity_record__menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Credit_Record" />
        <activity android:name=".Debit_Record" />
        <activity android:name=".Full_Record" />
        <activity
            android:name=".Scroll_menu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_scroll_menu"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".Register" />
        <activity android:name=".LogIn"/>
    </application>

</manifest> <!--  -->
